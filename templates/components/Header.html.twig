            className="nav-link"
            href="#"
            aria-label="Theme"
            onClick={(event) => {
            event.preventDefault();
            app.switchTheme();
            }}
        >
            {app.theme === 'light' && (
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                strokeWidth="2"
                strokeLinecap="round"
                strokeLinejoin="round"
