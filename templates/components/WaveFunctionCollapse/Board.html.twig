<div{{ attributes }} class="wave-function-collapse_board" data-poll="collapse">

    <div class="container">
        {% for j in 0..height-1 %}
            <div class="row">
                {% for i in 0..width-1 %}
                    {% set cell = grid[i + j * height] %}
                    <div class="col p-0">
                        <div class="ratio ratio-1x1">
                            {% if cell.isCollapsed %}
                                {% set index = cell.options[0] %}
                                <div class="bg-secondary d-flex align-items-center justify-content-center">
                                    <img src="{{ asset('images/wave-function-collapse/circuit-coding-train/' ~ tiles[index].index ~ '.png') }}" alt="Tile {{ tiles[index].index }}" class="img-fluid rotate-{{ tiles[index].direction }}">
                                </div>
                            {% else %}
                                <div class="bg-secondary d-flex align-items-center justify-content-center">
                                    <div class="cell-options">
                                        {% for option in cell.options %}
                                            <img src="{{ asset('images/wave-function-collapse/circuit-coding-train/' ~ tiles[option].index ~ '.png') }}" 
                                                 alt="Option {{ tiles[option].index }}" 
                                                 class="img-fluid option-tile rotate-{{ tiles[option].direction }}"
                                                 style="width: {{ 100 / cell.options|length }}%; opacity: 0.5;">
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>

</div>
